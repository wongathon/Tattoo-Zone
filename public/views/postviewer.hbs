
<div class="col-md-4 col-md-offset-2">
 <div class="panel" id="img-panel">
  <img class="img-responsive" id="post-image" src="{{post.image}}" alt="{{post.caption}}">
 </div>
</div>
<div class="col-md-5">
	<div class="panel panel-default" id="post-details">

		<div><strong>{{post.User.username}}</strong></div>
		<div>{{post.caption}}</div>
		<hr>
	
		<div id="timestamp">{{post.createdAt}}</div>
		<div id="post-tags"><p>Tags: {{post.tags}}</p></div>
		<div><button class="btn btn-info">{{post.likes}} Likes <i class="fa fa-thumbs-up"></i></button></div>
	</div>
	<div class="panel panel-default" id="comments-sect">
		<div class="comments">
			<h3>Comments</h3>
			{{#if post.Comments}}
			{{#each post.Comments}}
				<p id="uGroup">
					<span id="uName"></span>
					<span id="uID" hidden>
					{{this.UserId}}</span> said: {{this.text}}
				</p>
			{{/each}}
			{{else}}
				<p id="comments-none">No comments yet!</p>
			{{/if}}
		</div>
		<hr>
		<div class="comment" id="new-comment">
			<form class="commentform" action="/api/comments" method="POST">
			<div id="comment-message" class="form-group">
				<input type="text" placeholder="Enter comment here" id="comment" name="new_comment">
			</div>
			<button type="submit" value="Sumbit" class="btn btn-primary" id="csubmit">Submit</button>
			</form>
		</div> 
	</div>
</div>	

<script src="js/postviewer.js" type="text/javascript"></script>

