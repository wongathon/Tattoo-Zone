<div class="container">

  <div class="row">
    <div class="col-md-8 picture-container">
      {{post}}
    </div>
		<div class="col-md-4 post-details">

			<div>Description: {{caption}}</div>
			<div>Likes: {{likes}}</div>
			<div>Tags: {{#each tags}} {{tag}}, {{/each}}</div>

			<div class="comments">
			{{#each user-comments }}
				<p>{{user}}{{comment}}</p>
			{{/each}}
			</div>
		</div>
  </div>

</div>